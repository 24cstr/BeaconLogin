<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>
    <Button
            android:text="Login"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button_Login"
            style="@android:style/Widget.DeviceDefault.Button.Borderless" android:backgroundTint="#993EC55C"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:layout_marginBottom="296dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:clickable="false"/>
    <EditText
            android:gravity="center_horizontal"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/TextField_username" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/TextField_Password"
            android:hint="Username" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"/>
    <EditText
            android:gravity="center_horizontal"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/TextField_Password" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toTopOf="@+id/Button_Login"
            android:hint="Password" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"/>
    <Button
            android:text="Logout"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/Button_Logout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"
            android:layout_marginBottom="296dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Login successful"
            android:gravity="center"
            android:layout_width="185dp"
            android:layout_height="55dp"
            android:id="@+id/TextView_status" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>